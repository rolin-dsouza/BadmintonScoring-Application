    <RelativeLayout
        android:id="@+id/relativeLayoutradio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168">

        <TextView
            android:id="@+id/sserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Serving Side"
            android:textColor="@color/yellow"
            android:textSize="26dp"
            android:textStyle="bold">

        </TextView>


        <RadioGroup
            android:id="@+id/sradgrp"
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/sradleft"
                android:layout_width="wrap_content"
                android:layout_height="90dp"

                android:text="Left  "


                android:textColor="@color/white"
                android:textColorHint="@color/orange"
                android:textSize="25dp"></RadioButton>

            <RadioButton
                android:id="@+id/sradright"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="20dp"
                android:text="Right  "
                android:textColor="@color/white"
                android:textSize="25dp"></RadioButton>
        </RadioGroup>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="163dp"
        android:layout_height="270dp"
        android:layout_marginLeft="10dp"

        android:background="@drawable/bordercourt"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.597">

        <RelativeLayout
            android:id="@+id/relativecourt1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/divider18"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="src_over"/>
            <View
                android:id="@+id/divider15"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="240dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="src_over"/>


            <View
                android:id="@+id/divider4"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="src_over"
                android:background="?android:attr/listDivider" />

            <View
                android:id="@+id/divider10"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="130dp"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="src_over"

                android:background="?android:attr/listDivider" />

            <RelativeLayout
                android:id="@+id/rl11"
                android:layout_width="match_parent"
                android:layout_height="135dp">


                <RelativeLayout
                    android:id="@+id/rl111"
                    android:layout_width="130dp"
                    android:layout_height="135dp">


                    <View
                        android:id="@+id/divider19"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="132dp"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="@color/white"
                        android:backgroundTintMode="src_over" />

                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl12"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_below="@+id/rl11">

                <EditText
                    android:id="@+id/seditply1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="40dp"
                    android:forceHasOverlappingRendering="true"
                    android:hint="Enter Player1 Name"
                    android:textColor="@color/white"
                    android:textColorHint="@color/yellow"
                    android:textSize="10dp"

                    android:textStyle="bold"></EditText>


                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="135dp">

                    <ImageView
                        android:id="@+id/simgviewply1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha=".75">
                        <!--android:src="@drawable/bckgrnd"-->>

                    </ImageView>

                    <!-- <View
                        android:id="@+id/divider20"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="0dp"
                        android:backgroundTintMode="src_over"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="@color/white" />-->


                </RelativeLayout>
            </RelativeLayout>



        </RelativeLayout>

    </LinearLayout>





    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="163dp"
        android:layout_height="270dp"

        android:layout_marginRight="15dp"
        android:background="@drawable/bordercourt"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.597">

        <RelativeLayout
            android:id="@+id/relativecourt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/divider181"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="src_over"/>
            <View
                android:id="@+id/divider151"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="240dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="src_over"/>


            <View
                android:id="@+id/divider41"
                android:layout_width="3dp"
                android:layout_height="342dp"
                android:layout_marginLeft="30dp"
                android:backgroundTintMode="src_over"
                android:backgroundTint="@color/white"
                android:background="?android:attr/listDivider" />

            <View
                android:id="@+id/divider101"
                android:layout_width="3dp"
                android:layout_height="342dp"
                android:layout_marginLeft="140dp"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="src_over"
                android:background="?android:attr/listDivider" />

            <RelativeLayout
                android:id="@+id/rl13"
                android:layout_width="match_parent"
                android:layout_height="135dp">

                <EditText
                    android:id="@+id/seditply2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="40dp"
                    android:hint="Enter Player2 Name"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textColorHint="@color/yellow"
                    android:textSize="10dp"></EditText>

                <RelativeLayout
                    android:id="@+id/rl113"
                    android:layout_width="130dp"
                    android:layout_height="135dp"
                    android:layout_marginLeft="30dp">

                    <ImageView
                        android:id="@+id/simgviewply2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha=".75">
                        <!--android:src="@drawable/bckgrnd">-->

                    </ImageView>


                    <View
                        android:id="@+id/divider191"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="132dp"
                        android:background="?android:attr/listDivider"
